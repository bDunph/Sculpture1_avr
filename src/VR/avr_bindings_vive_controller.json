{
   "bindings" : {
      "/actions/avr" : {
         "poses" : [
            {
               "output" : "/actions/avr/in/hand_left",
               "path" : "/user/hand/left/pose/raw"
            },
            {
               "output" : "/actions/avr/in/hand_right",
               "path" : "/user/hand/right/pose/raw"
            }
         ],
         "haptics" : [
            {
               "output" : "/actions/avr/out/haptic_right",
               "path" : "/user/hand/right/output/haptic"
            },
            {
               "output" : "/actions/avr/out/haptic_left",
               "path" : "/user/hand/left/output/haptic"
            }
         ],
         "sources" : [
            {
               "inputs" : {
                  "position" : {
                     "output" : "/actions/avr/in/analoginput"
                  }
               },
               "mode" : "trackpad",
               "path" : "/user/hand/right/input/trackpad"
            },
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/avr/in/triggerhaptic"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/right/input/trigger"
            }, 
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/avr/in/triggerhaptic"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/left/input/trigger"
            },
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/avr/in/hidethiscontroller"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/left/input/application_menu"
            },
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/avr/in/hidethiscontroller"
                  }
               },
               "mode" : "button",
               "path" : "/user/hand/right/input/application_menu"
            } 
         ]
      }
   },
   "controller_type" : "vive_controller",
   "description" : "Bindings for the OpenVR SDK implementation in the \"avr\" framework for the Vive controller",
   "name" : "AVR bindings for Vive Controller"
}
